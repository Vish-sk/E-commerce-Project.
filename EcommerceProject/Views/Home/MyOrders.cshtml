@model List<EcommerceProject.Views.Dto.MyOrdersDTO>

<h2>My Orders</h2>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Product</th>
            <th>Image</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
            <th>Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr style="cursor:pointer" onclick="location.href='@Url.Action("OrderDetails", "Home", new { orderId = order.OrderId })'">
                <td>@order.OrderId</td>
                <td>@order.ProductName</td>
                <td>
                    <img src="@order.ProductImage" alt="@order.ProductName" width="60" />
                </td>
                <td>@order.Price.ToString("C")</td>
                <td>@order.Quantity</td>
                <td>@order.Total.ToString("C")</td>
                <td>@order.OrderDate.ToString("dd-MM-yyyy")</td>
                <td>@order.Status</td>
            </tr>
        }
    </tbody>
</table>
