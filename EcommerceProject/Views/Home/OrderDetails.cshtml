@model EcommerceProject.Views.Dto.OrderDetailsDTO

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details - Flipkart Style</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f1f3f6;
        }

        .flipkart-blue {
            color: #2874f0;
        }

        .flipkart-blue-bg {
            background-color: #2874f0;
        }

        .flipkart-yellow {
            color: #ffe500;
        }

        .status-completed {
            color: #388e3c;
        }

        .status-pending {
            color: #ff9f00;
        }

        .progress-bar {
            height: 6px;
            border-radius: 10px;
            background-color: #e0e0e0;
        }

        .progress-fill {
            height: 100%;
            border-radius: 10px;
            background-color: #388e3c;
            width: 66%;
        }

        .timeline-connector {
            position: relative;
            flex: 1;
            height: 2px;
            background-color: #c2c2c2;
            margin: 0 8px;
        }

            .timeline-connector.active {
                background-color: #388e3c;
            }
    </style>
</head>
<body class="bg-gray-100">

    <!-- Main Content -->
    <main class="container mx-auto my-6 px-4">
        <div class="bg-white rounded-sm shadow-sm p-4 mb-4">
            <div class="flex justify-between items-center mb-4">
                <h1 class="text-2xl font-medium">Order Details</h1>
                <div class="flex items-center">
                    <span class="text-gray-600 mr-2">Order #: @Model.OrderId</span>
                    <button class="bg-blue-50 text-blue-700 px-3 py-1 rounded-sm text-sm font-medium">
                        <i class="fas fa-print mr-1"></i> Print
                    </button>
                </div>
            </div>

            <!-- Progress Bar -->
            <div class="mb-6">
                <div class="flex justify-between mb-2">
                    <span class="text-sm @(Model.ConfirmedDate != null ? "status-completed" : "status-pending")">Order Confirmed</span>
                    <span class="text-sm @(Model.ShippedDate != null ? "status-completed" : "status-pending")">Shipped</span>
                    <span class="text-sm @(Model.DeliveredDate == null && Model.ShippedDate != null ? "status-pending" : "text-gray-500")">Out for Delivery</span>
                    <span class="text-sm @(Model.DeliveredDate != null ? "status-completed" : "text-gray-500")">Delivered</span>
                </div>
                <div class="progress-bar">
                    @{
                        var progressWidth = 0;
                        if (Model.DeliveredDate != null) progressWidth = 100;
                        else if (Model.ShippedDate != null) progressWidth = 66;
                        else if (Model.ConfirmedDate != null) progressWidth = 33;
                    }
                    <div class="progress-fill" style="width:@progressWidth%"></div>
                </div>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                <!-- Left Column - Product Info -->
                <div class="lg:col-span-2">
                    <div class="border rounded-sm p-4 mb-4 flex flex-col sm:flex-row items-start">
                        <img src="@Model.ProductImage" alt="@Model.ProductName" class="w-32 h-32 object-contain mx-auto sm:mx-0">
                        <div class="flex-1 mt-4 sm:mt-0 sm:ml-4">
                            <p class="font-medium text-lg">@Model.ProductName</p>
                            <p class="text-gray-600 mt-1">Seller: @Model.SellerName</p>
                            <div class="flex items-center mt-2">
                                <span class="text-green-600 font-medium mr-2">₹@Model.Price</span>
                            </div>
                            <div class="mt-2">
                                <span class="text-gray-800">Quantity: @Model.Quantity</span>
                            </div>
                            <div class="mt-3 flex items-center">
                                <span class="status-completed font-medium">
                                    Delivery Expected: @(Model.DeliveredDate?.ToString("dd MMM yyyy") ?? "Pending")
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- Pricing Details -->
                    <div class="border rounded-sm p-4">
                        <h3 class="font-medium text-lg mb-3">Pricing Details</h3>
                        <div class="space-y-2">
                            <div class="flex justify-between">
                                <span class="text-gray-600">Price (@Model.Quantity item(s))</span>
                                <span>₹@Model.Price</span>
                            </div>
                            <div class="flex justify-between border-t pt-2 mt-2 font-medium text-lg">
                                <span>Total Amount</span>
                                <span>₹@Model.TotalAmount</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right Column - Delivery & Status -->
                <div class="space-y-6">
                    <!-- Delivery Details -->
                    <div class="border rounded-sm p-4">
                        <h3 class="font-medium text-lg mb-3">Delivery Address</h3>
                        <div class="text-gray-800">
                            <p class="font-medium">@Model.CustomerName</p>
                            <p class="mt-2">@Model.Address</p>
                            <p>📞 @Model.Phone</p>
                        </div>
                    </div>

                    <!-- Order Status Timeline -->
                    <div class="border rounded-sm p-4">
                        <h3 class="font-medium text-lg mb-3">Order Status</h3>
                        <div class="space-y-6">
                            @* Timeline Items dynamically *@
                            <div class="flex items-start">
                                <div class="@(Model.ConfirmedDate != null ? "status-completed" : "status-pending") mt-1">
                                    <i class="fas fa-check-circle text-xl"></i>
                                </div>
                                <div class="ml-3">
                                    <p class="font-medium @(Model.ConfirmedDate != null ? "status-completed" : "status-pending")">Order Confirmed</p>
                                    <p class="text-sm text-gray-600">@(Model.ConfirmedDate?.ToString("dd MMM yyyy, hh:mm tt") ?? "Pending")</p>
                                </div>
                            </div>

                            <div class="flex items-start">
                                <div class="@(Model.ShippedDate != null ? "status-completed" : "status-pending") mt-1">
                                    <i class="fas fa-shipping-fast text-xl"></i>
                                </div>
                                <div class="ml-3">
                                    <p class="font-medium @(Model.ShippedDate != null ? "status-completed" : "status-pending")">Shipped</p>
                                    <p class="text-sm text-gray-600">@(Model.ShippedDate?.ToString("dd MMM yyyy, hh:mm tt") ?? "Pending")</p>
                                </div>
                            </div>

                            <div class="flex items-start">
                                <div class="@(Model.DeliveredDate != null ? "status-completed" : "status-pending") mt-1">
                                    <i class="fas fa-truck-loading text-xl"></i>
                                </div>
                                <div class="ml-3">
                                    <p class="font-medium @(Model.DeliveredDate != null ? "status-completed" : "status-pending")">Delivered</p>
                                    <p class="text-sm text-gray-600">@(Model.DeliveredDate?.ToString("dd MMM yyyy") ?? "Pending")</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
</html>
